inference.4onstudios.com {
    reverse_proxy app:3000 {
        transport http {
            read_buffer 0
            write_buffer 0
        }
    }
    encode gzip zstd
    log {
        output file /var/log/caddy/access.log {
            roll_size 10mb
            roll_keep 10
            roll_keep_for 336h
        }
    }
    tls internal
}