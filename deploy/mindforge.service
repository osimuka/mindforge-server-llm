[Unit]
Description=Mindforge LLM stack (Docker Compose)
After=docker.service
Requires=docker.service

[Service]
Type=simple
WorkingDirectory=/opt/mindforge-server-llm
ExecStartPre=/bin/mkdir -p /opt/mindforge-server-llm
ExecStart=/usr/bin/docker compose up -d
ExecStop=/usr/bin/docker compose down
ExecReload=/usr/bin/docker compose pull && /usr/bin/docker compose up -d
Restart=always
RestartSec=5s
TimeoutStartSec=120
TimeoutStopSec=30

[Install]
WantedBy=multi-user.target
